<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="apple-touch-icon" sizes="180x180" href="../fav/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="../fav/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="../fav/favicon-16x16.png">
    <link rel="manifest" href="../fav/site.webmanifest">
    <link rel="mask-icon" href="../fav/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <script defer src="../agent-menu.js"></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>TC Networks - Time Sheet</title>
    <link rel="icon" type="image/png" sizes="32x32" href="../fav/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="../fav/favicon-16x16.png">
</head>
<body class="bg-slate-800 h-screen flex relative">

    <!-- Left Side Menu -->
    <div class="w-1/6 bg-slate-950 text-white p-4 text-center">
        <img src="../tc-logo-menu.png" style="width: 90%; height: auto; margin-bottom: 20px; padding: 1rem;">
        <ul id="menu">
            
        </ul>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-8 relative">
        <div class="max-w-full w-full min-h-full bg-white p-8">
            <div class="grid grid-cols-4 gap-4 mb-8">
            <!-- Box 1 -->
            <div class="bg-blue-500 text-white rounded-lg p-4 shadow flex justify-between items-center">
                <div>
                    <h2 class="text-3xl font-bold" id="ptoUsed">0</h2>
                    <p class="text-sm">PTO Hours Used</p>
                </div>
                <div class="text-5xl opacity-30">
                   {{!-- <i class="fa-solid fa-ticket"></i> --}}
                </div>
            </div>
            <!-- Box 2 -->
            <div class="bg-green-500 text-white rounded-lg p-4 shadow flex justify-between items-center">
                <div>
                    <h2 class="text-3xl font-bold" id="ptoRemaining">0</h2>
                    <p class="text-sm">PTO Hours Remaining</p>
                </div>
                <div class="text-5xl opacity-30">
                    {{!-- <i class="fas fa-chart-line"></i> --}}
                </div>
            </div>
            <!-- Box 3 -->
            <div class="bg-yellow-500 text-white rounded-lg p-4 shadow flex justify-between items-center">
                <div>
                    <h2 class="text-3xl font-bold" id="ptoTotal">0</h2>
                    <p class="text-sm">FPTO Hours Total</p>
                </div>
                <div class="text-5xl opacity-30">
                    {{!-- <i class="fas fa-clock"></i> --}}
                </div>
            </div>
            <!-- Box 4 -->
            <div class="bg-red-500 text-white rounded-lg p-4 shadow flex justify-between items-center">
                <div>
                    <h2 class="text-3xl font-bold" id="ptoPending">0</h2>
                    <p class="text-sm">PTO Request Pending</p>
                </div>
                <div class="text-5xl opacity-30">
                    {{!-- <i class="fas fa-users"></i> --}}
                </div>
            </div>
        </div>



            <div class="flex items-center justify-between mb-4">
                <!-- Password Manager Passwords text -->
                <h1 class="text-2xl font-bold mb-4">PTO Request</h1>

                <!-- Search Box and Add New Password Button Container -->
                <div class="flex items-center">
                    <!-- Search Box -->
                   
                    
                    <!-- Add New Password Button -->
                    <button class="bg-blue-500 text-white px-4 py-2 rounded-md ml-4" onclick="openModal()" ><i class="fa-solid fa-plus"></i> Request Time Off</button>
                </div>
            </div>
            <div class="max-w-6xl mx-auto flex justify-between space-x-4">
                <div class="w-full bg-white rounded pb-8">
                    
        
            <div class="w-full bg-white text-center rounded px-8 pt-6 pb-8">
                  <table class="table-auto w-full mb-4">
                    <thead class="text-center">
                        <tr>
                            <th class="px-4 py-2 text-left text-gray-600">Start Date</th>
                            <th class="px-4 py-2 text-left text-gray-600">End Date</th>
                            <th class="px-4 py-2 text-left text-gray-600">Total Hours</th>
                            <th class="px-4 py-2 text-left text-gray-600">Reason</th>
                            <th class="px-4 py-2 text-left text-gray-600">Status</th>
                        </tr>
                    </thead>
                    <tbody>

                        
                        <tr class="bg-gray-50">
                            <td class="border px-4 py-2">01/13/2024</td>
                            <td class="border px-4 py-2">01/17/2024</td>
                            <td class="border px-4 py-2">40 hours</td>
                            <td class="border px-4 py-2">PTO</td>
                            <td class="border px-4 py-2"><span class="bg-yellow-500 text-white px-3 py-1 rounded">Pending</span></td>
                        </tr>
                        
                        <tr class="bg-gray-50">
                            <td class="border px-4 py-2">12/16/2024</td>
                            <td class="border px-4 py-2">12/23/2024</td>
                            <td class="border px-4 py-2">48 hours</td>
                            <td class="border px-4 py-2">PTO</td>
                            <td class="border px-4 py-2"><span class="bg-green-500 text-white px-3 py-1 rounded">Approved</span></td>
                        </tr>

                        <tr class="bg-gray-50">
                            <td class="border px-4 py-2">05/20/2024</td>
                            <td class="border px-4 py-2">05/22/2024</td>
                            <td class="border px-4 py-2">16 hours</td>
                            <td class="border px-4 py-2">PTO</td>
                            <td class="border px-4 py-2"><span class="bg-green-500 text-white px-3 py-1 rounded">Approved</span></td>
                        </tr>

                        
                    </tbody>
                </table>
            </div>
        </div>
        
            <!-- Modal Background -->
            <div class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center z-50">
                <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
        
                <!-- Modal Content -->
                <div class="modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
        
                    <!-- Close Modal Button -->
                    <div class="modal-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-4 mr-4 text-white text-sm z-50" onclick="closeModal()">
                        <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                            <path d="M14.1 4.93L13.17 4L9 8.17 4.83 4 3.9 4.93 8.07 9.1 3.9 13.27 4.83 14.2 9 10.03l4.17 4.17 0.93-0.93L9.93 9.1z"></path>
                        </svg>
                        <span class="text-sm">(Esc)</span>
                    </div>
        
                    <!-- Add margin if you want to see some of the overlay behind the modal-->
                    <div class="modal-content py-4 text-left px-6">
                        <!--Title-->
                        <div class="flex justify-between items-center pb-3">
                            <p class="text-2xl font-bold">Time Off Request</p>
                            <div class="modal-close cursor-pointer z-50" onclick="closeModal()">
                                <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                                    <path d="M14.1 4.93L13.17 4L9 8.17 4.83 4 3.9 4.93 8.07 9.1 3.9 13.27 4.83 14.2 9 10.03l4.17 4.17 0.93-0.93L9.93 9.1z"></path>
                                </svg>
                            </div>
                        </div>
        
                        <!--Body-->
                        <p class="mb-4">Please fill out the form below to request time off.</p>
                        <form>
                            <div class="mb-4">
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                                    Employee Name
                                </label>
                                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" type="text" placeholder="Your Name">
                            </div>
                            <div class="mb-4 flex justify-between gap-4">
                                <div class="w-1/2">
                                    <label class="block text-gray-700 text-sm font-bold mb-2" for="start-date">
                                        Start Date
                                    </label>
                                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="start-date" type="date">
                                </div>
                                <div class="w-1/2">
                                    <label class="block text-gray-700 text-sm font-bold mb-2" for="end-date">
                                        End Date
                                    </label>
                                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="end-date" type="date">
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="reason-select">
                                    Reason
                                </label>
                                <select class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="reason-select">
                                    <option>FPTO</option>
                                    <option>Sick Leave</option>
                                    <option>Personal Leave</option>
                                    <!-- More options as needed -->
                                </select>
                            </div>
                            <div class="mb-4">
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="additional-info">
                                    Additional Information
                                </label>
                                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="additional-info" placeholder="Details"></textarea>
                            </div>
                            <div class="mb-4">
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="manager-select">
                                    Manager
                                </label>
                                <select class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="manager-select">
                                    <option>Manager A</option>
                                    <option>Manager B</option>
                                    <option>Manager C</option>
                                    <!-- More options as needed -->
                                </select>
                            </div>
        
                            <!--Footer-->
                            <div class="flex justify-end pt-2">
                                <button type="button" class="px-4 bg-transparent p-3 rounded-lg text-blue-500 hover:bg-gray-100 hover:text-blue-400 mr-2" onclick="closeModal()">Cancel</button>
                                <button type="button" class="px-4 bg-blue-500 p-3 rounded-lg text-white hover:bg-blue-400">Request</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        <script>
            // Function to open the modal
        function openModal() {
            document.querySelector('.modal').classList.remove('opacity-0');
            document.querySelector('.modal').classList.remove('pointer-events-none');
            document.body.classList.add('modal-active');
        }

        // Function to close the modal
        function closeModal() {
            document.querySelector('.modal').classList.add('opacity-0');
            document.querySelector('.modal').classList.add('pointer-events-none');
            document.body.classList.remove('modal-active');
        }

        let ptoPending = document.getElementById('ptoPending');
        let ptoUsed = document.getElementById('ptoUsed');
        let ptoRemaining = document.getElementById('ptoRemaining');
        let ptoTotal = document.getElementById('ptoTotal');

        let ptoPendingRequest = 1;
        let ptoUsedHours = 64;
        let ptoTotalHours = 160;

        ptoRemaining.innerText = ptoTotalHours - ptoUsedHours
        ptoPending.innerText = ptoPendingRequest
        ptoTotal.innerText = ptoTotalHours
        ptoUsed.innerText = ptoUsedHours

        </script>
    </div>
</body>
</html>
